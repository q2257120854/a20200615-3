.grace-empty-view {
    margin-top: 150rpx;
    font-size: 40rpx;
}

.grace-empty-image {
    width: 220rpx;
    height: 200rpx;
    margin: 40rpx;
    border-radius: 200rpx;
    margin-bottom: 40rpx;
}

.grace-header-body {
    position: absolute;
    width: 100%;
    text-align: center!important;
    height: 88rpx;
    line-height: 88rpx;
    color: #ffffff;
    font-size: 36rpx;
    display: block;
}

.grace-nav-bar {
    position: absolute;
    width: 100%;
    bottom: 2rpx;
}

.grace-loading {
    margin-top: 40rpx!important;
}

.grace-media-adsense {
    margin-bottom: 20rpx;
}

.grace-media-item {
    display: block;
    position: relative;
    overflow: hidden;
    height: 500rpx;
}

.grace-media-item:first-child {
    margin-top: 20rpx;
}

.grace-media-img {
    width: 100%;
    height: 400rpx;
    overflow: hidden;
    position: relative;
    border-radius: 10rpx;
}

.grace-media-img>image {
    width: 100%;
    height: 400rpx;
}

.grace-media-info {
    width: 100%;
    overflow: hidden;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.grace-media-info .grace-col {
    position: relative;
    overflow: hidden;
    height: 100rpx;
    box-sizing: border-box;
    display: inline-block;
    vertical-align: middle;
    line-height: 80rpx;
    background: #FFFFFF;
    border: none!important;
    outline: none;
    appearance: none;
    padding: 0;
}

.grace-media-info .grace-col::after {
    border: none;
    padding: 0;
}

.grace-media-info .icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    display: inline-block;
    vertical-align: middle;
}

.grace-media-info .text {
    display: inline-block;
    vertical-align: middle;
    font-size: 26rpx;
    color: #555555;
}

.grace-media-share {
    width: 120rpx;
    float: right;
    text-align: right;
}

.grace-media-author {
    width: 300rpx;
    float: left;
}

.grace-media-click {
    width: 150rpx;
    float: left;
}

.grace-media-author .icon {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}

.grace-media-title {
    position: absolute;
    top: 0;
    left: 0;
    color: #fff;
    font-size: 38rpx;
    z-index: 199;
    padding: 20rpx;
    word-wrap: break-word;
    line-height: 50rpx;
    max-height: 120rpx;
    overflow: hidden;
    box-sizing: border-box;
    font-weight: 550;
}

.grace-media-mask {
    position: absolute;
    width: 100%;
    height: 400rpx;
    top: 0;
    left: 0;
    z-index: 196;
    background-image: linear-gradient(rgba(0,0,0,0.8),rgba(0,0,0,0),rgba(0,0,0,0.5));
    text-align: center;
}

.grace-media-play {
    width: 100rpx;
    height: 100rpx;
    margin-top: 150rpx;
}

.grace-pop-menu {
    width: 100%;
    font-size: 0;
}

.grace-pop-item {
    width: 88rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 0;
    color: #FFFFFF;
    border-radius: 50%;
    margin: 20rpx 0;
    padding: 20rpx 10rpx;
    overflow: hidden;
    display: block;
    box-sizing: border-box;
}

.grace-pop-base {
    padding: 0;
}

.grace-pop-image {
    width: 50rpx;
    height: 45rpx;
}

.grace-loading {
    letter-spacing: 2rpx!important;
    font-size: 34rpx!important;
    margin-top: 40rpx!important;
}

.five>.grace-grids-items {
    width: 140rpx;
}
.grace-header-body {
    position: absolute;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    color: #ffffff;
    font-size: 40rpx;
    display: block;
    padding-left: 25rpx;
}

.grace-header-body .link-back {
    font-size: 50rpx;
}

.media-share {
    background-color: #000000;
    padding: 40rpx 40rpx;
    height: 170rpx;
    box-sizing: border-box;
}

.media-share .grace-button {
    width: 280rpx;
    display: block;
    box-shadow: none;
    border-radius: 10rpx;
    overflow: hidden;
    font-size: 36rpx;
    padding: 0;
}

.media-share>uni-view {
    background: #000000;
    margin: 0;
    height: 100rpx;
}

.media-share.grace-space-between {
    padding-bottom: 0;
}

.media-share .grace-button::before {
    margin-right: 10rpx;
}

.media-share .grace-button:after {
    display: none;
}

.media-share .icon-share2 {
    animation: free_download 0.6s linear alternate infinite;
}

@-webkit-keyframes free_download {
    0% {
        -webkit-transform: scale(0.9);
    }

    100% {
        -webkit-transform: scale(1);
    }
}

@keyframes free_download {
    0% {
        transform: scale(0.9);
    }

    100% {
        transform: scale(1);
    }
}

.grace-author {
    background-color: #FFFFFF;
}

.grace-author-box {
    padding-left: 20rpx;
}

.grace-author-box .grace-list-body {
